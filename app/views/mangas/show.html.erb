<%= link_to 'Back to All Mangas', mangas_path %>
<h1><%= @manga.title %></h1>

<p><strong>Synopsis:</strong> <%= @manga.synopsis %></p>
<p><strong>Chapters:</strong> <%= @manga.chapters %></p>
<p><strong>Release Date:</strong> <%= @manga.release_date %></p>

<h2>Authors</h2>
<ul>
  <% if @manga.authors.any? %>
    <% @manga.authors.each do |author| %>
      <li><%= link_to author.name, author_path(author) %></li>
    <% end %>
  <% else %>
    <li>No authors available</li>
  <% end %>
</ul>

<h2>Genres</h2>
<ul>
  <% if @manga.genres.any? %>
    <% @manga.genres.each do |genre| %>
      <li><%= link_to genre.name, genre_path(genre) %></li>
    <% end %>
  <% else %>
    <li>No genres available</li>
  <% end %>
</ul>

<h2>Characters</h2>
<ul>
  <% if @manga.characters.any? %>
    <% @manga.characters.each do |character| %>
      <li><%= link_to "#{character.name} - #{character.role}", character_path(character) %></li>
    <% end %>
  <% else %>
    <li>No characters available</li>
  <% end %>
</ul>