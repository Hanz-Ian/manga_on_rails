<h1 class="title has-text-centered">All Authors</h1>
<table class="table is-fullwidth is-striped">
  <thead>
    <tr>
      <th>Name</th>
    </tr>
  </thead>
  <tbody>
    <% @authors.each do |author| %>
      <tr>
        <td><%= link_to author.name, author_path(author) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
